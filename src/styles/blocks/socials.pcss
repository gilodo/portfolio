.socials {
    display: flex;
    align-items: center;
}

.socials__item {
    margin-right: 40px;

    &:last-child {
        margin-right: 0;
    }
}

.socials__link {
    width: 25px;
    height: 31px;
    display: block;
    fill: #706a65;

    &:hover {
        fill: #ff9a00;
    }
}

.socials__icon {
    position: relative;
    z-index: 999;
}

.socials__icon_rounded {
    padding: 13px;
    border: 1px solid #606365;
    border-radius: 50%;
}