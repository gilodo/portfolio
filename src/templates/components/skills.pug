script(type="text/x-template")#skills-list
    .values__widget-container
        ul.owner-skills
            li.owner-skills__item(v-for="skill in skillsData")
                skills-row(
                    :skillRowObject="skill"
                )
               
script(type="text/x-template")#skills-row
    .skills-row
        h3.skills-row__title {{skillRowObject.skillsGroup}}
        ul.skills-row__list
            li.skills-row__item(v-for="(skillPercent, skillName) in skillRowObject.skills")
                skill(
                    :skillNameComp="skillName"
                    :skillPercentComp="skillPercent"
                )

script(type="text/x-template")#skill
    .skill
        svg(viewBox='0 0 100 100' preserveAspectRatio='none').skill__shape
            circle(cx='50' cy='50' r='40').skill__circle.skill__circle--under
            circle(cx='50' cy='50' r='40' ref='color-circle').skill__circle.skill__circle--above
            linear-gradient()
        .skill__title {{skillNameComp}}